{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia Immigration Visualization",
  "params": [
    {
      "name": "year_filter",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [2020, 2021, 2022, 2023],
        "name": "Select Year: "
      }
    },
    {
      "name": "selected_soe",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Perak",
          "Perlis",
          "Pulau Pinang",
          "Sabah",
          "Sarawak",
          "Selangor",
          "Terengganu",
          "W.P. Labuan"
        ],
        "name": "Select State of Entry: "
      }
    },
    {
      "name": "min_arrivals",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000000,
        "step": 10000,
        "name": "Minimum Arrivals: "
      }
    },
    {
      "name": "min_arrivals_per_100k",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 10,
        "name": "Minimum Arrivals per 100,000: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 900,
      "height": 400,
      "title": "Malaysia Immigration Map",
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "properties.POP_EST", "type": "quantitative", "title": "Population", "format": ","},
              {"field": "total_arrivals", "type": "nominal", "title": "Total Arrivals"},
              {"field": "arrivals_per_100k", "type": "nominal", "title": "Arrivals per 100,000"}
            ]
          },
          "transform": [
            {
              "calculate": "'No data'",
              "as": "total_arrivals"
            },
            {
              "calculate": "'No data'",
              "as": "arrivals_per_100k"
            }
          ]
        },
           {
      "data": {
        "url": "https://raw.githubusercontent.com/martynafford/natural-earth-geojson/refs/heads/master/10m/physical/ne_10m_ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cce5ff"
      }
    },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/refs/heads/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Excel124/FIT3179/refs/heads/main/arrivals_soe%20(2).csv"
          },
          "transform": [
            {
              "calculate": "year(datum.date)",
              "as": "year"
            },
            {
              "filter": "datum.year == year_filter"
            },
            {
              "filter": "selected_soe == 'All' || datum.soe == selected_soe"
            },
            {
              "aggregate": [
                {"op": "sum", "field": "arrivals", "as": "total_arrivals"}
              ],
              "groupby": ["country"]
            },
            {
              "lookup": "country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.ADM0_A3",
                "fields": ["type", "properties", "geometry"]
              }
            },
            {
              "calculate": "datum.properties != null && datum.properties.POP_EST != null ? datum.total_arrivals / (datum.properties.POP_EST > 0 ? datum.properties.POP_EST : 1) * 100000 : null",
              "as": "arrivals_per_100k"
            },
            {
              "calculate": "datum.total_arrivals != null ? datum.total_arrivals : 'No data'",
              "as": "total_arrivals_display"
            },
            {
              "calculate": "datum.arrivals_per_100k != null ? datum.arrivals_per_100k : 'No data'",
              "as": "arrivals_per_100k_display"
            }
          ],
          "mark": {"type": "geoshape"},
          "encoding": {
            "shape": {"field": "geometry", "type": "geojson"},
            "color": {
              "field": "arrivals_per_100k",
              "type": "quantitative",
              "title": "Arrivals per 100,000 population",
              "scale": {
                "type": "threshold",
                "domain": [0,25,50,100,250,500,750,1000,1250,1500,2000],
                "range": [
    "#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6", 
    "#4292c6", "#2171b5", "#08519c", "#08306b", "#041E42", "#021428"
  ]
              }
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "total_arrivals_display", "type": "nominal", "title": "Total Arrivals"},
              {"field": "arrivals_per_100k_display", "type": "nominal", "title": "Arrivals per 100,000"},
              {"field": "properties.POP_EST", "type": "quantitative", "title": "Population", "format": ","}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "dx": -5,
            "dy": -5,
            "fontSize": 12,
            "fontStyle": "italic"
          },
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {"field": "note", "type": "nominal"}
          },
          "data": {
            "values": [
              {"longitude": 150, "latitude": -13, "note": "Southeast Asia: High immigration rates"},
              {"longitude": 140, "latitude": -45, "note": "Australia: Significant arrivals"}
            ]
          }
        }
      ]
    },
    {
      "width": 900,
      "height": 300,
      "title": "Top 10 Countries by Arrivals",
      "data": {
        "url": "https://raw.githubusercontent.com/Excel124/FIT3179/refs/heads/main/arrivals_soe%20(2).csv"
      },
      "transform": [
        {
          "calculate": "year(datum.date)",
          "as": "year"
        },
        {
          "filter": "datum.year == year_filter"
        },
        {
          "filter": "selected_soe == 'All' || datum.soe == selected_soe"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "arrivals", "as": "total_arrivals"}
          ],
          "groupby": ["country"]
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "total_arrivals", "order": "descending"}]
        },
        {"filter": "datum.rank <= 10"}
      ],
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "country",
              "type": "nominal",
              "sort": "-x",
              "title": "Country"
            },
            "x": {
              "field": "total_arrivals",
              "type": "quantitative",
              "title": "Total Arrivals"
            },
            "color": {
              "field": "total_arrivals",
              "type": "quantitative",
              "scale": {
                "scheme": "blues"
              },
              "legend": null
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {"field": "total_arrivals", "type": "quantitative", "title": "Total Arrivals", "format": ","}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 5,
            "dy": -5,
            "fontSize": 12,
            "fontStyle": "italic"
          },
          "encoding": {
            "y": {"field": "country", "type": "nominal"},
            "x": {"field": "total_arrivals", "type": "quantitative"},
            "text": {"value": "Top country for arrivals"}
          },
          "transform": [{"filter": "datum.rank == 1"}]
        }
      ]
    }
  ]
}
