{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A radar chart comparing tourism expenditure between 2019 and 2023 with tooltips.",
  "width": 1000,
  "height": 400,
  "padding": 50,

  "signals": [
    {"name": "radius", "update": "280 / 2"}
  ],

  "data": [
    {
      "name": "table",
      "values": [
        {"key": "Food & Beverage", "value": 9756.1, "category": 2019},
        {"key": "Passenger Transport", "value": 5617.4, "category": 2019},
        {"key": "Travel Agencies", "value": 1596.5, "category": 2019},
        {"key": "Cultural & Recreational", "value": 757.8, "category": 2019},
        {"key": "Automotive Fuel", "value": 4964.9, "category": 2019},
        {"key": "Country-specific Goods", "value": 20230.2, "category": 2019},
        {"key": "Country-specific Services", "value": 2198.6, "category": 2019},
        {"key": "Food & Beverage", "value": 5068.1, "category": 2023},
        {"key": "Passenger Transport", "value": 853.5, "category": 2023},
        {"key": "Travel Agencies", "value": 1.9, "category": 2023},
        {"key": "Cultural & Recreational", "value": 933.2, "category": 2023},
        {"key": "Automotive Fuel", "value": 4335.7, "category": 2023},
        {"key": "Country-specific Goods", "value": 18682.8, "category": 2023},
        {"key": "Country-specific Services", "value": 1265.3, "category": 2023}
      ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["key"]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "key"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "value"},
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "category"},
      "range": ["#005f73", "#0a9396", "#94d2bd", "#e9d8a6", "#ee9b00", "#ca6702", "#bb3e03", "#ae2012"]
    }
  ],

  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["category"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "stroke": {"scale": "color", "field": "category"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "category"},
              "fillOpacity": {"value": 0.1}
            }
          }
        },
        {
          "type": "symbol",
          "name": "category-symbol",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "size": {"value": 50},
              "fill": {"scale": "color", "field": "category"},
              "strokeWidth": {"value": 2},
              "stroke": {"scale": "color", "field": "category"},
              "opacity": {"value": 0.7}
            }
          },
          "tooltip": {
            "content": [
              {"field": "key", "title": "Category"},
              {"field": "value", "title": "Value", "format": ",.2f"},
              {"field": "category", "title": "Year"}
            ]
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 15) * cos(scale('angular', datum.key))"},
          "y": {"signal": "(radius + 15) * sin(scale('angular', datum.key))"},
          "text": {"field": "key"},
          "align": [
            {
              "test": "abs(scale('angular', datum.key)) > PI / 2",
              "value": "right"
            },
            {
              "value": "left"
            }
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.key) > 0", "value": "top"
            },
            {
              "test": "scale('angular', datum.key) == 0", "value": "middle"
            },
            {
              "value": "bottom"
            }
          ],
          "fill": {"value": "black"},
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 12}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    }
  ],
  
  "legends": [
    {
      "fill": "color",
      "title": "Year",
      "orient": "none",
      "legendX": 0,
      "legendY": 200
    }
  ]
}